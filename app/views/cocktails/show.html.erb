<h1><%= @cocktail.name %></h1>

<ul class="list-group">
  <% @cocktail.doses.each do |dose| %>
    <li class="list-group-item">
      <%= dose.description %>
      <%= dose.ingredient.name %>
      <%= link_to "Remove",
                  dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<%= render "doses/new", cocktail: @cocktail, dose: @dose %>

<%= link_to "Home", cocktails_path %>
<%= link_to "Back", new_cocktail_path %>
